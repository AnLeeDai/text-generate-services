# Ignore sensitive environment files
.env
.env.backup
.env.production

# Ignore system files
.DS_Store
.phpactor.json
.phpunit.result.cache
/fleet/
.idea/
.nova/
.phpunit.cache
.vscode/
.zed/

# Ignore generated files and outputs
/public/generated/
*.zip
*.docx
generated/

# Ignore auth and node modules
/auth.json
/node_modules/

# Ignore build, storage, and vendor directories
/public/build
/public/hot
/public/storage
/storage/*.key
/storage/pail
/vendor/

# Database files
/database/database.sqlite
/database/database.sqlite-journal

# Laravel specific files
Homestead.json
Homestead.yaml
Thumbs.db

# Keep private directory but ignore its contents except templates
/storage/app/private/*
!/storage/app/private/.gitkeep
!/storage/app/private/*.docx

# Keep database directory but ignore database file
/database/database.sqlite
/database/database.sqlite-journal
!/database/.gitkeep

# Log files
/storage/logs/*.log

# Cache files
/bootstrap/cache/*
!/bootstrap/cache/.gitkeep
